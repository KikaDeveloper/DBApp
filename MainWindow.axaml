<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DBApp.MainWindow"
        Title="DBApp"
        Width="600" Height="700">

        <Window.Styles>
            <StyleInclude Source="./styles.axaml" />
        </Window.Styles>

        <StackPanel>

            <StackPanel Name="NameField" Orientation="Horizontal">
                <Label Content="Имя" />

                <TextBox Classes="field">

                </TextBox>
            </StackPanel>

            <StackPanel Name="UrlField" Orientation="Horizontal">
                <Label Content="URL" />

                <TextBox Classes="field">

                </TextBox>
            </StackPanel>

            <StackPanel Name="DescriptionField" Orientation="Horizontal">
                <Label Content="Описание" />

                <TextBox Classes="field">

                </TextBox>
            </StackPanel>

            <Button Classes="add" Content="Add" />

        </StackPanel>

</Window>
